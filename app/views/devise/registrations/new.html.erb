<%= stylesheet_link_tag "registration" %>

<div class="container">
  <div class="dinner_img"></div>
  <div class="column_cadastro">
    <h1>dinnerdash</h1>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "reg_box" %>
          <br>
        </div>

        <div class="field">
          <%= f.label :nome %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "reg_box" %>
          <br>
        </div>

        <div class="field">
          <%= f.label :senha %>
          <% if @minimum_password_length %>
          <em>(no mínimo <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "reg_box" %>
          <br>
        </div>

        <div class="field">
          <%= f.label :Confime_sua_senha %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "reg_box" %>
          <br>
        </div>

        

        <div class="actions">
          <%= f.submit "cadastrar", class: "btn_cadastro" %>
          <!-- Como faz pro submit ficar bonitinho igual o link_to? -->
        </div>
        <br>
        <div class="line"></div>
        <p>Já possui conta?</p>
        <div class="actions">
          <%= link_to "fazer login", new_user_session_path, class: "btn_login" %>        
        </div>
      
      <% end %>
    </div>
  </div> <!-- Se eu não fechar as divs as paginas ficam sem scroll wtf? -->
<%= render "devise/shared/links" %>