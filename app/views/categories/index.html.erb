
<table>
  <tr>
    <th>Nome</th>
    <th>Número de Refeições</th>
    <th colspan="3">Cadastrada em</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td> <%= category.quantity %> </td>
      <td> <%= category.created_at.strftime("%d/%b/%y")%> </td>
      <td><%= button_to 'Editar', edit_category_path(category), method: 'get'%></td>
      <td><%= button_to 'Remover', category_path(category), method: 'delete', data: { confirm: 'Tem certeza?' } %></td>
  <% end %>
</table>
<%= link_to "Criar nova categoria", new_category_path %>
