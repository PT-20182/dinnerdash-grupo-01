<div class="imagem">
  <div class="top_navbar container d-flex">
    <div class="mr-auto p-2"><a class="text-light font-weight-bold logo" href="#">Dinnerdash</a></div>
    <div class="p-2"><a class="text-warning current font-weight-bold" href="#">backoffice</a></div>
    <div class="p-2"><a class="text-light font-weight-bold" href="#">perfil</a></div>
    <div class="p-2"><a class="text-light font-weight-bold" href="#">sair</a></div>
  </div>

            <div class="container texto">
                <h1 class="text-light">BackOffice</h1>
                <p class="text-light">Gerencie pedidos, refeições e mais</p>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse margem" id="navbarNavAltMarkup">
                  <div class="navbar-nav">
                    <a class="nav-item nav-link" href="#"> Pedidos <span class="sr-only">(current)</span></a>
                    <a class="nav-item nav-link" href="#">Usuários</a>
                    <a class="nav-item nav-link" href="#">Refeições</a>
                    <a class="nav-item nav-link active" href="#">Categorias de Refeição</a>
                  </div>
                </div>
        </nav>
        <div class="container-fluid">
          <table class="table table-hover tabela">
            <thead class="table-active">
              <tr class="cabecalho">
                <th scope="col">Nome</th>
                <th scope="col">Número de Refeições</th>
                <th scope="col" colspan="3">Cadastrada em</th>
              </tr>
            </thead>
            <% @categories.each do |category| %>
            <tbody class = "text-muted">
                <tr class="corpo">
                  <td><%= category.name %></td>
                  <td> <%= category.quantity %> </td>
                  <td> <%= category.created_at.strftime("%d/%b/%y")%> </td>
                  <td><%= link_to 'Editar', edit_category_path(category), method: 'get', class: "text-warning"%></td>
                  <td><%= link_to 'Remover', category_path(category), method: 'delete', data: { confirm: 'Tem certeza?' }, class: "text-danger"%></td>
                </tr>
            </tbody>
            <% end %>
          </table>
         <%= link_to "Criar nova categoria", new_category_path, class:"btn btn-success"%>
        </div>
<footer class="footer fixed-bottom">
    <div class="minhaDiv text-center">
        <span>dinnerdash | todos os direitos reservados</span>
        <span>desenvolvido por Conrado N.</span>
    </div>
</footer>
